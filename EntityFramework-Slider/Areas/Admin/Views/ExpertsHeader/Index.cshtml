@model ExpertsHeader
@{
    ViewData["Title"] = "ExpertsHeader";
}


<div class="container my-5">
    <a class="btn btn-success" style="float: right;" asp-action="Create">Create</a>

    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>
                        Title
                    </th>
                    <th>
                        Description
                    </th>
                    <th>
                        Operation
                    </th>
                </tr>
            </thead>
            <tbody>
               
                        <tr>
                            <td class="py-1">
                            @Model.Title
                            </td>
                             <td class="py-1">
                            @Model.Description
                            </td>

                            <td>
                            <a class="btn btn-outline-info" asp-action="Detail" asp-route-id="@Model.Id">Info</a>
                            <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
                            <form asp-action="SoftDelete" asp-route-id="@Model.Id" method="post" style="display: inline-block">
                                    <button type="submit" class="btn btn-outline-danger">Delete</button>
                               </form>


                            </td>

                        </tr>


            </tbody>
        </table>
    </div>

</div>





