@model Blog
@{
    ViewData["Title"] = "Edit";
}


<div class="container mt-5">
    <h1>Edit</h1>
  
        <div class="img-detail">
            <img class="img-fluid" src="~/img/@Model.Image" />
        </div>
    <form class="forms-sample" method="post" asp-action="Edit" enctype="multipart/form-data">

        <div class="form-group mt-5">
            <label for="formFile" class="form-label">Choose an image for blog</label>
            <input class="form-control" type="file" id="formFile" asp-for="Photo" />
            <span class="text-danger" asp-validation-for="Photo"></span>
        </div>
        <div class="form-group mt-5">
            <label for="formFile" class="form-label">Add title</label>
            <input class="form-control" type="text" id="formFile" asp-for="Header">
            <span class="text-danger" asp-validation-for="Header"></span>
        </div>
        <div class="form-group mt-5">
            <label for="formFile" class="form-label">Add description</label>
            <input class="form-control" type="text" id="formFile" asp-for="Description">
            <span class="text-danger" asp-validation-for="Description"></span>
        </div>
        <div class="form-group mt-5">
            <label for="formFile" class="form-label">Add date</label>
            <input  type="datetime-local" asp-for="Date">
            <span class="text-danger" asp-validation-for="Date"></span>
        </div>
        <button type="submit" class="btn btn-primary mr-2">Submit</button>
        <button asp-action="Index" class="btn btn-dark">Cancel</button>
    </form>
  
</div>